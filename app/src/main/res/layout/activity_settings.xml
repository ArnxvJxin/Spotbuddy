<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:orientation="vertical"
    tools:context=".SettingsActivity"
    tools:layout_editor_absoluteX="1dp"
    tools:layout_editor_absoluteY="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:elevation="2dp"
        android:gravity="center"
        android:orientation="horizontal"
        tools:targetApi="lollipop">

        <TextView
            android:id="@+id/settings_txt_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/poppins_semibold"
            android:gravity="center"
            android:text="Cancel"
            android:textColor="@color/blue_theme"
            android:textSize="18sp"
            tools:ignore="TextContrastCheck,TouchTargetSizeCheck" />

        <TextView
            android:id="@+id/settings_txt_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="6"
            android:fontFamily="@font/poppins_bold"
            android:gravity="center"
            android:text="Settings"
            android:textColor="@color/black"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/settings_txt_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/poppins_semibold"
            android:gravity="center"
            android:text="Save"
            android:textColor="@color/blue_theme"
            android:textSize="18sp"
            tools:ignore="TextContrastCheck,TouchTargetSizeCheck" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/dirty_white"
            android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:elevation="2dp"
            android:orientation="vertical"
            android:padding="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/settings_txt_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:fontFamily="@font/poppins_semibold"
                    android:gravity="start"
                    android:text="Status"
                    android:textColor="@color/greyish_black"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/settings_txt_statustxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:fontFamily="@font/poppins_medium"
                    android:gravity="end"
                    android:text="Status"
                    android:textColor="@color/grey"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:elevation="5dp"
                android:gravity="center"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/settings_btn_snooze"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:background="@drawable/rounded_button"
                    android:elevation="5dp"
                    android:gravity="center"
                    android:fontFamily="@font/proxima_nova"
                    android:text="Snooze Account"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/settings_btn_unsnooze"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:background="@drawable/rounded_button"
                    android:elevation="5dp"
                    android:fontFamily="@font/proxima_nova"
                    android:text="Unsnooze Account"
                    android:textAllCaps="false"
                    android:gravity="center"
                    android:textColor="@color/blue_theme"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:backgroundTint="@color/white" />

            </LinearLayout>
        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:background="@color/white"
                android:elevation="2dp"
                android:orientation="horizontal"
                android:padding="15dp">

                <TextView
                    android:id="@+id/settings_txt_gender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:fontFamily="@font/poppins_semibold"
                    android:gravity="start"
                    android:text="Gender"
                    android:textColor="@color/greyish_black"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/settings_txt_gendertxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:fontFamily="@font/poppins_medium"
                    android:gravity="end"
                    android:text="Gender"
                    android:textColor="@color/grey"
                    android:textSize="20sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:background="@color/white"
                android:elevation="2dp"
                android:orientation="vertical"
                android:padding="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/settings_txt_preference"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="6"
                        android:fontFamily="@font/poppins_semibold"
                        android:gravity="start"
                        android:text="Preference"
                        android:textColor="@color/greyish_black"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/settings_txt_preferencetxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="6"
                        android:fontFamily="@font/poppins_medium"
                        android:gravity="end"
                        android:text="Preference"
                        android:textColor="@color/grey"
                        android:textSize="20sp" />
                </LinearLayout>

                <RadioGroup
                    android:id="@+id/settings_rag_preference"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/settings_rad_men"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layoutDirection="rtl"
                        android:text="@string/men"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        tools:ignore="LabelFor,VisualLintButtonSize"
                        tools:targetApi="lollipop" />

                    <RadioButton
                        android:id="@+id/settings_rad_women"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layoutDirection="rtl"
                        android:text="@string/women"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        tools:ignore="LabelFor,VisualLintButtonSize"
                        tools:targetApi="lollipop" />

                    <RadioButton
                        android:id="@+id/settings_rad_everyone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layoutDirection="rtl"
                        android:text="@string/everyone"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        tools:ignore="LabelFor,VisualLintButtonSize"
                        tools:targetApi="lollipop" />

                </RadioGroup>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:background="@color/white"
                android:elevation="2dp"
                android:orientation="vertical"
                android:padding="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/settings_txt_age"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="6"
                        android:fontFamily="@font/poppins_semibold"
                        android:gravity=""
                        android:text="Age"
                        android:textColor="@color/greyish_black"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/settings_txt_agestart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_medium"
                        android:gravity="end"
                        android:text="AgeStart"
                        android:textColor="@color/grey"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/settings_txt_dash"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_medium"
                        android:gravity="center"
                        android:text="-"
                        android:textColor="@color/grey"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/settings_txt_ageend"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_medium"
                        android:gravity="end"
                        android:text="AgeEnd"
                        android:textColor="@color/grey"
                        android:textSize="20sp" />

                </LinearLayout>

                <com.google.android.material.slider.RangeSlider
                    android:id="@+id/settings_sld_age"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:stepSize="1"
                    android:valueFrom="18"
                    android:valueTo="60"
                    app:values="@array/age_range"
                    app:labelStyle="@style/Widget.MaterialComponents.Slider"
                    tools:ignore="SpeakableTextPresentCheck" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:background="@color/white"
                android:elevation="2dp"
                android:orientation="vertical"
                android:padding="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/settings_txt_distance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="6"
                        android:fontFamily="@font/poppins_semibold"
                        android:gravity="start"
                        android:text="Distance"
                        android:textColor="@color/greyish_black"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/settings_txt_distancetxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="6"
                        android:fontFamily="@font/poppins_medium"
                        android:gravity="end"
                        android:text="Distance"
                        android:textColor="@color/grey"
                        android:textSize="20sp" />
                </LinearLayout>

                <RadioGroup
                    android:id="@+id/settings_rag_distance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/settings_rad_area"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layoutDirection="rtl"
                        android:text="Area"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        tools:ignore="LabelFor,VisualLintButtonSize"
                        tools:targetApi="lollipop" />

                    <RadioButton
                        android:id="@+id/settings_rad_city"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layoutDirection="rtl"
                        android:text="City"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        tools:ignore="LabelFor,VisualLintButtonSize"
                        tools:targetApi="lollipop" />

                    <RadioButton
                        android:id="@+id/settings_rad_state"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layoutDirection="rtl"
                        android:text="State"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        tools:ignore="LabelFor,VisualLintButtonSize"
                        tools:targetApi="lollipop" />

                    <RadioButton
                        android:id="@+id/settings_rad_country"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layoutDirection="rtl"
                        android:text="Country"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        tools:ignore="LabelFor,VisualLintButtonSize"
                        tools:targetApi="lollipop" />

                </RadioGroup>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:background="@color/white"
                android:elevation="2dp"
                android:orientation="horizontal"
                android:padding="15dp">

                <TextView
                    android:id="@+id/settings_txt_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:fontFamily="@font/poppins_semibold"
                    android:gravity="start"
                    android:text="Location"
                    android:textColor="@color/greyish_black"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/settings_txt_locationtxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/poppins_medium"
                    android:gravity="end"
                    android:maxWidth="250dp"
                    android:text="City, State, Country"
                    android:textColor="@color/grey"
                    android:textSize="20sp"
                    tools:ignore="TouchTargetSizeCheck" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:background="@color/white"
                android:elevation="2dp"
                android:orientation="horizontal"
                android:padding="15dp">

                <TextView
                    android:id="@+id/settings_txt_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:fontFamily="@font/poppins_semibold"
                    android:gravity="start"
                    android:text="Email"
                    android:textColor="@color/greyish_black"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/settings_edt_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/poppins_medium"
                    android:gravity="end"
                    android:maxWidth="250dp"
                    android:hint="Email"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/grey"
                    android:textSize="20sp"
                    tools:ignore="VisualLintTextFieldSize" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:background="@color/white"
                android:elevation="2dp"
                android:orientation="horizontal"
                android:padding="15dp">

                <TextView
                    android:id="@+id/settings_txt_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:fontFamily="@font/poppins_semibold"
                    android:gravity="start"
                    android:text="Phone"
                    android:textColor="@color/greyish_black"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/settings_txt_phonetxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:fontFamily="@font/poppins_medium"
                    android:gravity="end"
                    android:text="Phone"
                    android:textColor="@color/grey"
                    android:textSize="20sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:elevation="5dp"
                android:orientation="horizontal"
                android:padding="15dp">

                <Button
                    android:id="@+id/settings_btn_logout"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_button"
                    android:elevation="5dp"
                    android:fontFamily="@font/proxima_nova"
                    android:text="Logout"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/settings_btn_delete"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_button"
                    android:elevation="5dp"
                    android:fontFamily="@font/proxima_nova"
                    android:text="Delete Account"
                    android:textAllCaps="false"
                    android:textColor="@color/red"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:backgroundTint="@color/white" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
