<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_marginBottom="1dp"
    android:layout_marginTop="1dp"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:elevation="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/conversations_img_match"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:scaleType="centerCrop"
            android:src="@color/dirty_white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/conversations_txt_name"
                    android:layout_width="225dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:gravity="start"
                    android:maxWidth="230dp"
                    android:text="Match Name"
                    android:textColor="@color/black"
                    android:textSize="21dp" />

                <TextView
                    android:id="@+id/conversations_txt_message"
                    android:layout_width="225dp"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:text="Start a conversation."
                    android:textColor="@color/grey"
                    android:textSize="18dp" />


            </LinearLayout>

            <TextView
                android:id="@+id/conversations_txt_time"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="35dp"
                android:clickable="true"
                android:fontFamily="@font/poppins_semibold"
                android:gravity="left"
                android:text="12/03/23 00:00"
                android:textColor="@color/blue_theme"
                android:textSize="15sp"
                tools:ignore="TouchTargetSizeCheck" />


        </LinearLayout>


    </LinearLayout>

</RelativeLayout>